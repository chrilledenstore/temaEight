---
// import Card from "../components/card.astro";
import Layout from "../layouts/Layout.astro";
import Burgermenu from "../components/Burgermenu.astro";
import SiteStruktur from "../components/SiteStruktur.astro";
---

<SiteStruktur>
  <section class="hero">
    <article class="logo_container">
      <img src="../assets/WeShelterlogo.svg" alt="logo" />
    </article>
    <Burgermenu />
  </section>
</SiteStruktur>

<style>
  body {
    --primary: #fffbf7;
    --secondary: #1e0a08;
    --accent: #256af6;
  }

  .hero {
    width: 100%;
    height: 600px;
    background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.166), rgba(255, 255, 255, 0)), url("../assets/heroimg.svg");
    background-size: cover;
    background-position: -400px;
  }
</style>
